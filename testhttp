#!/bin/bash
if [ "$#" -ne 2 ]; then
    echo "Usage: ./testhttp <cookies_file> <tested_http_address>"
    exit 1
fi

if [[ $2 = http://* ]] ; then
  address_port=${2#"http://"}
  address_port=${address_port%%/*}
  port=${address_port#*:}
  address=${address_port%:*}
  if [[ $port == $address_port ]] ; then
    port="80"
  fi
  echo "./testhttp_raw $address:$port $1 $2"
  ./testhttp_raw $address:$port $1 $2
else
  address_port=${2#"https://"}
  address_port=${address_port%%/*}
  port=${address_port#*:}
  address=${address_port%:*}
  if [[ $port == $address_port ]] ; then
    port="443"
  fi
  echo $address_port
  cat > stunnel.conf << ENDOFFILE
[service]
client = yes
accept = 127.0.0.1:3333
connect = $address:$port
ENDOFFILE
  stunnel stunnel.conf
  echo "./testhttp_raw 127.0.0.1:3333 $1 $2"
  ./testhttp_raw 127.0.0.1:3333 $1 $2
fi

exit 0
